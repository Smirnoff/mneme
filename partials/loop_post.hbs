<div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 grid-item {{#if image}} grid-item-image {{else}} grid-item-text {{/if}}">
	<div class="thumbnail">
		{{#if image}}
			<div class="img-crop">
				<!--<img src="{{image}}" class="img" alt="thumbnail" />-->
				<div class="img" style="background-image: url('{{image}}'); width: 100%; height: 200px;"></div>
			</div>

			<div class="caption">
				<h3>{{title}}</h3>
				<p>{{excerpt characters="100"}}…</p>
				<a href="{{url}}" class="btn btn-default btn-xs" role="button">Read more</a>
				<time>{{date format="MMMM Mo, YYYY"}}</time>
			</div>

		{{else}}

			<div class="caption">
				<h3>{{title}}</h3>
				<p>{{excerpt characters="300"}}…</p>
				<a href="{{url}}" class="btn btn-default btn-xs" role="button">Read more</a>
				<time>{{date format="MMMM Mo, YYYY"}}</time>
			</div>

		{{/if}}

	</div>
</div>
